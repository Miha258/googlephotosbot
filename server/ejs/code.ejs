<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <%=code%>
        <button onclick="copy()">Копіювати</button>
    </div>
    <style>
        div {
            margin-top: 15%;
            text-align: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 400;
            font-size: 20px;
        }
        button {
            font-size: 20px;
            width: 180px;
            height: 50px;
            margin-left: 45%;
            border-radius: 5px;
            display: block; margin-top: 20px;
        }
    </style>
    <script>
        async function copy() {
            const copyText = document.getElementsByTagName('div')[0]
            console.log(copyText.innerText.replace('Копіювати',''))
            await navigator.clipboard.writeText(copyText.innerText.replace('Копіювати',''))
            alert("Скопійовано!" + copyText.innerText.replace('Копіювати',''))
        }
    </script>
</body>
</html>